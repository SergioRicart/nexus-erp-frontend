---
import FormLabel from "@components/auth/FormLabel.astro";
import LoginLayout from "@layouts/LoginLayout.astro";
---

<LoginLayout title="Registro - Nexus ERP">

    <div class="auth-header">
        <div class="brand-logo">
            <i class="ph-bold ph-hexagon"></i>
        </div>
        <h1>Crear Cuenta</h1>
        <p>Regístrate para acceder a Nexus ERP</p>
    </div>

    <form method="POST" class="auth-form"> 
        
        <FormLabel 
            title="Nombre Completo"
            name="fullName" 
            icon="ph-user" 
            type="text" 
            placeHolder="Tu nombre completo"
            required={true}
        />

        <FormLabel 
            title="Correo Electrónico" 
            name="email"
            icon="ph-envelope-simple" 
            type="email" 
            placeHolder="nombre@empresa.com"
            required={true}
        />

        <FormLabel 
            title="Contraseña" 
            name="password"
            icon="ph-lock-key" 
            type="password" 
            placeHolder="••••••••"
            required={true}
        />

        <FormLabel 
            title="Confirmar Contraseña" 
            name="confirmPassword"
            icon="ph-lock-key" 
            type="password" 
            placeHolder="••••••••"
            required={true}
        />

        <button type="submit" class="btn-primary">
            Crear Cuenta
        </button>
        
    </form>

    <div class="auth-footer">
        <p>¿Ya tienes una cuenta? <a href="/">Iniciar Sesión</a></p>
    </div>

</LoginLayout>

<script type="module" src="/src/scripts/register"></script>

