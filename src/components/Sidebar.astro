<aside class="sidebar" id="sidebar">
    <div class="brand">
        <i class="ph-bold ph-hexagon" style="color: var(--primary); font-size: 1.5rem;"></i>
        <span>Nexus ERP</span>
    </div>

    <nav class="menu">
        <div class="menu-category">General</div>
        <ul>
            <li class="menu-item">
                <a href="#" class="menu-link active">
                    <i class="ph ph-squares-four"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="#" class="menu-link">
                    <i class="ph ph-shopping-cart"></i>
                    <span>Pedidos</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="#" class="menu-link">
                    <i class="ph ph-users"></i>
                    <span>Clientes</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="#" class="menu-link">
                    <i class="ph ph-package"></i>
                    <span>Productos</span>
                </a>
            </li>
        </ul>

        <div class="menu-category" style="margin-top: 20px;">Gestión</div>
        <ul>
            <li class="menu-item">
                <a href="#" class="menu-link">
                    <i class="ph ph-chart-line-up"></i>
                    <span>Informes</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="#" class="menu-link">
                    <i class="ph ph-gear"></i>
                    <span>Configuración</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="sidebar-footer">
        <div class="user-mini">
            <img src="https://ui-avatars.com/api/?name=Alex+Dev&background=random" alt="Admin">
            <div class="user-info">
                <h4>Alex Dev</h4>
                <p>Administrador</p>
            </div>
        </div>
    </div>
</aside>


<style is:global>

    .sidebar {
        width: var(--sidebar-width);
        background-color: var(--bg-sidebar);
        color: var(--text-on-dark);
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
        z-index: 100;
        transition: var(--transition);
    }

    .brand {
        height: var(--header-height);
        display: flex;
        align-items: center;
        padding: 0 24px;
        font-size: 1.25rem;
        font-weight: 700;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        letter-spacing: -0.5px;
    }
    .brand span { color: var(--primary); margin-left: 4px; }

    .menu { padding: 24px 16px; flex: 1; }
    .menu-category {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--text-light);
        margin-bottom: 12px;
        padding-left: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
    .menu-item { margin-bottom: 4px; }
    .menu-link {
        display: flex;
        align-items: center;
        padding: 12px;
        border-radius: 8px;
        color: var(--text-light);
        transition: var(--transition);
        font-weight: 500;
    }
    .menu-link i { font-size: 1.25rem; margin-right: 12px; }
    .menu-link:hover, .menu-link.active {
        background-color: rgba(255,255,255,0.1);
        color: #fff;
    }
    .menu-link.active {
        background-color: var(--primary);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .sidebar-footer {
        padding: 24px;
        border-top: 1px solid rgba(255,255,255,0.1);
    }
    .user-mini { display: flex; align-items: center; gap: 12px; }
    .user-mini img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,0.2);
    }
    .user-info h4 { font-size: 0.9rem; font-weight: 600; }
    .user-info p { font-size: 0.75rem; color: var(--text-light); }
    /* Responsive del Layout (Sidebar) */
    @media (max-width: 1024px) {
        :root { --sidebar-width: 80px; }
        .brand span, .menu-category, .menu-link span, .user-info { display: none; }
        .menu-link { justify-content: center; padding: 12px 0; }
        .menu-link i { margin-right: 0; font-size: 1.5rem; }
        .sidebar-footer { padding: 24px 10px; }
        .user-mini { justify-content: center; }
    }

    @media (max-width: 768px) {
        :root { --sidebar-width: 260px; }
        .sidebar { transform: translateX(-100%); box-shadow: 4px 0 15px rgba(0,0,0,0.1); }
        .sidebar.active { transform: translateX(0); }
        .main-content { margin-left: 0; }
        .brand span, .menu-category, .menu-link span, .user-info { display: block; }
        .menu-link { justify-content: flex-start; padding: 12px; }
        .menu-link i { margin-right: 12px; }
        .mobile-toggle { display: block; }
        .search-bar { width: 100%; max-width: 200px; }
    }
</style>